.boxSizing
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

// ==============
// SCREENS
// ==============

// Mode screen
#modeScreen
  display block

  select
    width 100%
    padding 10px
    @extend .boxSizing


// Configuration screen
#configurationScreen
  display block

  section
    width 400px
    margin 0 auto




#screenOne
  display: none

