#confScreenCricket
  display: none

#gameScreen
  display: none

ul#fiveZeroOneScoreUl
  li.active
    background greenyellow



#gameOver
  display none
  background #FF665E
  color white
  font-weight bold
  font-size 1.4em


.pointHitWrap
  width 77px;
  padding 1px 1px;
  overflow hidden


.pointHitBox
  width 25px
  height 25px
  background #FF706D
